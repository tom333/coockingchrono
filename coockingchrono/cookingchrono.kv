#:kivy 1.0.9
#:import TimeWidget widgets.time_input
#:import CountDownLabel widgets.count_down_label

<MainScreen>
    name: "MainScreen"

    MDLabel:
        text: "Chronomètre"
        pos_hint: {"center_x": .5, "center_y": .80}
        valign: 'middle'
        halign: 'center'
    TimeInput:
        id: duration
        hint_text: "00:00:00"
        max_text_length: 8
        pos_hint: {"center_x": .5, "center_y": .5}
        valign: 'middle'
        halign: 'center'
    MDRectangleFlatButton:
        text: "Run sound"
        pos_hint: {"center_x": .5, "center_y": .25}
        on_press: root.start_count_down()


<CountDownScreen>
    name: "CountDownScreen"

    MDLabel:
        text: "Chronomètre"
        pos_hint: {"center_x": .5, "center_y": .80}
        valign: 'middle'
        halign: 'center'
    CountDownLabel:
        id: timerlabel
        pos_hint: {"center_x": .5, "center_y": .5}
        valign: 'middle'
        halign: 'center'
    MDRectangleFlatButton:
        text: "Stop"
        pos_hint: {"center_x": .5, "center_y": .25}
        on_press: root.pause_count_down()
